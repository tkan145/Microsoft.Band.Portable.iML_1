            <Label Grid.Row="0"
                   Grid.RowSpan="2"
                   Text="{Binding Name}" 
                   Style="{DynamicResource EvolveListItemTextStyle}"
                   StyleId="SessionItem"/>


            <Label Grid.Row="2"
                   Text="{Binding ShortName}" 
                   Style="{DynamicResource EvolveListItemDetailTextStyle}"
                   StyleId="SpeakerNames"/>

            <Label Grid.Row="3"
                   VerticalOptions="End"
                   Text="{Binding Algorithm}}" 
                   Style="{DynamicResource EvolveListItemDetailTextStyle}"
                   StyleId="SessionTime"/>

            
